@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Authentication
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrafficLawDocumentRazor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrafficLawDocumentRazor.styles.css" asp-append-version="true" />

    <!-- Toast custom styles -->
    <style>
      .toast-notify {
        min-width: 400px;
        max-width: 500px;
        font-size: 1rem;
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        border-radius: 20px;
        border: none;
        backdrop-filter: blur(15px);
        background: rgba(255, 255, 255, 0.95) !important;
        overflow: hidden;
        animation: toastSlideIn 0.5s ease-out;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      
      @@keyframes toastSlideIn {
        from {
          opacity: 0;
          transform: translateY(-30px) scale(0.95);
        }
        to {
          opacity: 1;
          transform: translateY(0) scale(1);
        }
      }
      
      .toast-notify .toast-header {
        border-radius: 20px 20px 0 0;
        font-weight: 600;
        padding: 20px 25px 15px 25px;
        border: none;
        position: relative;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      
      .toast-notify .toast-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
      }
      
      .toast-notify .toast-header strong {
        font-size: 1.1rem;
        margin-left: 5px;
      }
      
      .toast-notify .toast-body {
        padding: 20px 25px 25px 25px;
        font-size: 1rem;
        line-height: 1.6;
        color: #2c3e50;
        background: rgba(255, 255, 255, 0.9);
      }
      
      .toast-notify.bg-success .toast-header {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
        color: white;
      }
      
      .toast-notify.bg-danger .toast-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%) !important;
        color: white;
      }
      
      .toast-notify .btn-close {
        filter: brightness(0) invert(1);
        opacity: 0.8;
        transition: opacity 0.3s ease;
        margin-left: auto;
      }
      
      .toast-notify .btn-close:hover {
        opacity: 1;
        transform: scale(1.1);
      }
      
      .toast-notify .toast-header i {
        font-size: 1.2rem;
        margin-right: 8px;
      }
      
      .toast-notify.bg-success .toast-header i {
        color: #ffd700;
      }
      
      .toast-notify.bg-danger .toast-header i {
        color: #ffd700;
      }
      
      /* Toast container positioning */
      .toast-container {
        z-index: 9999 !important;
      }
      
      /* Responsive adjustments */
      @@media (max-width: 768px) {
        .toast-notify {
          min-width: 320px;
          max-width: 90vw;
          margin: 0 10px;
        }
      }
    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TrafficLawDocumentRazor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/LawDocumentPage/Index">Document Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/DocumentTagPage/Index">Tag Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/DocumentCategoryPage/Index">Category Management</a>
                        </li>
                    </ul>

                    <!-- Authentication Links -->
                    <ul class="navbar-nav">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Profile">My Profile</a>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-page="/Logout" method="get">
                                    <button type="submit" class="nav-link btn btn-link">Logout</button>
                                </form>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Register">Register</a>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div
          id="toastContainer"
          class="toast-container position-fixed top-0 start-50 translate-middle-x p-3"
          style="z-index:1080;">
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TrafficLawDocumentRazor - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Toast trigger script -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // JSON-encoded TempData values
        const rawMsg = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["ToastMessage"]));
        if (!rawMsg) return;

        const toastType = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["ToastType"]));
        const type = toastType === 'error' ? 'danger' : 'success';
        const title = type === 'danger' ? 'Error' : 'Success';

        // Build toast HTML with icons
        const icon = type === 'danger' ? 'bi-exclamation-triangle-fill' : 'bi-check-circle-fill';
        const html = `
          <div class="toast toast-notify fade" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header text-white bg-${type} border-0">
              <i class="bi ${icon}"></i>
              <strong class="me-auto">${title}</strong>
              <button type="button" class="btn-close btn-close-white ms-2 mb-1" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
              ${rawMsg}
            </div>
          </div>`;

        const container = document.getElementById('toastContainer');
        container.insertAdjacentHTML('beforeend', html);

        // Show the latest toast
        const toasts = container.querySelectorAll('.toast');
        const toastEl = toasts[toasts.length - 1];
        new bootstrap.Toast(toastEl, { delay: 5000, autohide: true }).show();
      });
    </script>

</body>
</html>
