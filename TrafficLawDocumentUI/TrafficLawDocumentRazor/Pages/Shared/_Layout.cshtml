@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Authentication
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Traffic Law Document Adviser</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrafficLawDocumentRazor.styles.css" asp-append-version="true" />

    <!-- Toast custom styles -->
    <style>
      .toast-notify {
        min-width: 400px;
        max-width: 500px;
        font-size: 1rem;
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        border-radius: 20px;
        border: none;
        backdrop-filter: blur(15px);
        background: rgba(255, 255, 255, 0.95) !important;
        overflow: hidden;
        animation: toastSlideIn 0.5s ease-out;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      
      @@keyframes toastSlideIn {
        from {
          opacity: 0;
          transform: translateY(-30px) scale(0.95);
        }
        to {
          opacity: 1;
          transform: translateY(0) scale(1);
        }
      }
      
      .toast-notify .toast-header {
        border-radius: 20px 20px 0 0;
        font-weight: 600;
        padding: 20px 25px 15px 25px;
        border: none;
        position: relative;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      
      .toast-notify .toast-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
      }
      
      .toast-notify .toast-header strong {
        font-size: 1.1rem;
        margin-left: 5px;
      }
      
      .toast-notify .toast-body {
        padding: 20px 25px 25px 25px;
        font-size: 1rem;
        line-height: 1.6;
        color: #2c3e50;
        background: rgba(255, 255, 255, 0.9);
      }
      
      .toast-notify.bg-success .toast-header {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
        color: white;
      }
      
      .toast-notify.bg-danger .toast-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%) !important;
        color: white;
      }
      
      .toast-notify .btn-close {
        filter: brightness(0) invert(1);
        opacity: 0.8;
        transition: opacity 0.3s ease;
        margin-left: auto;
      }
      
      .toast-notify .btn-close:hover {
        opacity: 1;
        transform: scale(1.1);
      }
      
      .toast-notify .toast-header i {
        font-size: 1.2rem;
        margin-right: 8px;
      }
      
      .toast-notify.bg-success .toast-header i {
        color: #ffd700;
      }
      
      .toast-notify.bg-danger .toast-header i {
        color: #ffd700;
      }
      
      /* Toast container positioning */
      .toast-container {
        z-index: 9999 !important;
      }
      
      /* Responsive adjustments */
      @@media (max-width: 768px) {
        .toast-notify {
          min-width: 320px;
          max-width: 90vw;
          margin: 0 10px;
        }
      }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">
                    <i class="bi bi-shield-check text-primary"></i> Traffic Law Adviser
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Everyone can see Home -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>

                        <!-- Everyone can see Law Documents -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/LawDocumentPage/Index">
                                <i class="bi bi-file-text"></i> Law Documents
                            </a>
                        </li>

                        <!-- Authenticated -->
                        @if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("Staff") || User.IsInRole("Expert") || User.IsInRole("Admin") || User.IsInRole("User")))
                        {
                            <!-- Staff can see all management options -->
                            @if (User.IsInRole("Staff"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear"></i> Management
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-page="/News/Manage/Index">
                                                <i class="bi bi-newspaper"></i> News Management
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-page="/LawDocumentPage/Management/Index">
                                                <i class="bi bi-file-earmark-text"></i> Documents Management
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-page="/DocumentTagPage/Index">
                                                <i class="bi bi-tag"></i> Tag Management
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-page="/DocumentCategoryPage/Index">
                                                <i class="bi bi-folder"></i> Category Management
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/FeedbackPage/Index">
                                        <i class="bi bi-chat-dots"></i> Feedback
                                    </a>
                                </li>
                            }
                            <!-- Expert can only see Document Management -->
                            @if (User.IsInRole("Expert") && !User.IsInRole("Staff"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/LawDocumentPage/Management/Index">
                                        <i class="bi bi-file-check"></i> Verify Documents
                                    </a>
                                </li>
                            }
                            <!-- Admin can only see User Management -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/UserPage/Index">
                                        <i class="bi bi-people"></i> User Management
                                    </a>
                                </li>
                            }
                            <!-- User -->
                            @if (User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/FeedbackPage/Index">
                                        <i class="bi bi-chat-dots"></i> Feedback
                                    </a>
                                </li>
                            }
                        }
                        <!-- Everyone can see News -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/News/Index">
                                <i class="bi bi-newspaper"></i> News
                            </a>
                        </li>
                    </ul>

                    <!-- Privacy Page -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">
                                <i class="bi bi-shield"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Authentication Links -->
                    <ul class="navbar-nav ms-auto">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i>
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-page="/Profile">
                                            <i class="bi bi-person"></i> My Profile
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" asp-page="/Logout" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div
          id="toastContainer"
          class="toast-container position-fixed top-0 start-50 translate-middle-x p-3"
          style="z-index:1080;">
        </div>
    </div>

    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <main role="main" class="pb-3" style="width: 100%">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2025 - Traffic Law Document Adviser - <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
                <div class="col-md-6 text-end">
                    <small>Your trusted source for traffic law information</small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Toast trigger script -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // JSON-encoded TempData values
        const rawMsg = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["ToastMessage"]));
        if (!rawMsg) return;

        const toastType = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["ToastType"]));
        const type = toastType === 'error' ? 'danger' : 'success';
        const title = type === 'danger' ? 'Error' : 'Success';

        // Build toast HTML with icons
        const icon = type === 'danger' ? 'bi-exclamation-triangle-fill' : 'bi-check-circle-fill';
        const html = `
          <div class="toast toast-notify fade" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header text-white bg-${type} border-0">
              <i class="bi ${icon}"></i>
              <strong class="me-auto">${title}</strong>
              <button type="button" class="btn-close btn-close-white ms-2 mb-1" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
              ${rawMsg}
            </div>
          </div>`;

        const container = document.getElementById('toastContainer');
        container.insertAdjacentHTML('beforeend', html);

        // Show the latest toast
        const toasts = container.querySelectorAll('.toast');
        const toastEl = toasts[toasts.length - 1];
        new bootstrap.Toast(toastEl, { delay: 5000, autohide: true }).show();
      });
    </script>

</body>
</html>
