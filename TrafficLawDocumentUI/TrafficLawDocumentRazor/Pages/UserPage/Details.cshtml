@page
@model TrafficLawDocumentRazor.Pages.UserPage.DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 animate__animated animate__fadeIn">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-person-circle me-2" style="font-size: 2rem;"></i>
                    <h3 class="mb-0">User Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4"><i class="bi bi-person-fill"></i> Full Name</dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.User.FullName)</dd>

                        <dt class="col-sm-4"><i class="bi bi-envelope-fill"></i> Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Email)</dd>

                        <dt class="col-sm-4"><i class="bi bi-person-badge"></i> Role</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info text-dark">@Html.DisplayFor(model => model.User.Role)</span>
                        </dd>

                        <dt class="col-sm-4"><i class="bi bi-check-circle-fill"></i> Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.User.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-4"><i class="bi bi-calendar-plus"></i> Created By</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.CreatedBy)</dd>

                        <dt class="col-sm-4"><i class="bi bi-calendar-event"></i> Last Updated By</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.LastUpdatedBy)</dd>

                        <dt class="col-sm-4"><i class="bi bi-calendar-x"></i> Deleted By</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.DeletedBy)</dd>

                        <dt class="col-sm-4"><i class="bi bi-calendar-date"></i> Created Time</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.CreatedTime)</dd>

                        <dt class="col-sm-4"><i class="bi bi-calendar2-week"></i> Last Updated Time</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.LastUpdatedTime)</dd>

                        <dt class="col-sm-4"><i class="bi bi-calendar2-x"></i> Deleted Time</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.DeletedTime)</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white d-flex justify-content-between">
                    <a asp-page="./Edit" asp-route-id="@Model.User.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card-header h3 {
            margin-bottom: 0;
        }
        .badge {
            font-size: 1rem;
            padding: 0.5em 1em;
        }
        dt {
            display: flex;
            align-items: center;
            gap: 0.5em;
        }
    </style>
}
