@page
@model TrafficLawDocumentRazor.Pages.UserPage.DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="hero-section mb-4">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <div class="mb-4">
                    <i class="bi bi-person-circle text-warning" style="font-size: 4rem;"></i>
                </div>
                <h1 class="display-4 fw-bold mb-3">User Details</h1>
                <p class="lead mb-4">View comprehensive user information and account details.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a asp-page="./Edit" asp-route-id="@Model.User.Id" class="btn btn-light btn-lg">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-page="./Index" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="feature-card">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h2 class="section-title">User Information</h2>
                    </div>
                    <dl class="row mb-0">
                        <dt class="col-sm-4"><i class="bi bi-person-fill"></i> Full Name</dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.User.FullName)</dd>
                        <dt class="col-sm-4"><i class="bi bi-envelope-fill"></i> Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Email)</dd>
                        <dt class="col-sm-4"><i class="bi bi-person-badge"></i> Role</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info text-dark">@Html.DisplayFor(model => model.User.Role)</span>
                        </dd>
                        <dt class="col-sm-4"><i class="bi bi-check-circle-fill"></i> Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.User.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                        <dt class="col-sm-4"><i class="bi bi-calendar-plus"></i> Created By</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.CreatedBy)</dd>
                        <dt class="col-sm-4"><i class="bi bi-calendar-event"></i> Last Updated By</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.LastUpdatedBy)</dd>
                        <dt class="col-sm-4"><i class="bi bi-calendar-x"></i> Deleted By</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.DeletedBy)</dd>
                        <dt class="col-sm-4"><i class="bi bi-calendar-date"></i> Created Time</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.CreatedTime)</dd>
                        <dt class="col-sm-4"><i class="bi bi-calendar2-week"></i> Last Updated Time</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.LastUpdatedTime)</dd>
                        <dt class="col-sm-4"><i class="bi bi-calendar2-x"></i> Deleted Time</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.DeletedTime)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            border-radius: 20px;
            padding: 60px 30px;
            margin-bottom: 50px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
        }
        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #ffd700, #ffed4e);
        }
        .feature-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            overflow: hidden;
        }
        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }
        .section-title {
            color: #1e3c72;
            font-weight: 600;
            position: relative;
            display: inline-block;
            margin-bottom: 30px;
        }
        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, #ffd700, #ffed4e);
        }
        .badge {
            font-size: 1rem;
            padding: 0.5em 1em;
        }
        dt {
            display: flex;
            align-items: center;
            gap: 0.5em;
        }
    </style>
}
