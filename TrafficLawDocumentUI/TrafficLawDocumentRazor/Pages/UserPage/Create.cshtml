@page
@model TrafficLawDocumentRazor.Pages.UserPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Create New User</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="NewUser.FullName" class="control-label"></label>
                            <input asp-for="NewUser.FullName" class="form-control" />
                            <span asp-validation-for="NewUser.FullName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewUser.Email" class="control-label"></label>
                            <input asp-for="NewUser.Email" class="form-control" />
                            <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewUser.Password" class="control-label">Password</label>
                            <input asp-for="NewUser.Password" class="form-control" type="password" />
                            <span asp-validation-for="NewUser.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewUser.ConfirmPassword" class="control-label">Confirm Password</label>
                            <input asp-for="NewUser.ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewUser.Role" class="control-label"></label>
                            <select asp-for="NewUser.Role" class="form-control">
                                <option value="User">User</option>
                                <option value="Expert">Expert</option>
                                <option value="Admin">Admin</option>
                                <option value="Staff">Staff</option>
                            </select>
                            <span asp-validation-for="NewUser.Role" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check" style="display:none">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="NewUser.IsActive" /> @Html.DisplayNameFor(model => model.NewUser.IsActive)
                            </label>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
