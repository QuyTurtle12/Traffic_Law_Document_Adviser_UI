@page
@model TrafficLawDocumentRazor.Pages.UserPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="hero-section mb-4">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <div class="mb-4">
                    <i class="bi bi-person-plus-fill text-warning" style="font-size: 4rem;"></i>
                </div>
                <h1 class="display-4 fw-bold mb-3">Create New User</h1>
                <p class="lead mb-4">Add a new user to the system with comprehensive information and role assignment.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="#user-form" class="btn btn-light btn-lg">
                        <i class="bi bi-person-plus"></i> Fill Form
                    </a>
                    <a asp-page="Index" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- User Form Section -->
    <div id="user-form" class="mb-5">
        <div class="text-center mb-4">
            <h2 class="section-title">User Information</h2>
        </div>

        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="feature-card">
                    <div class="card-body p-4">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger border-0 shadow-sm mb-4">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>@Model.ErrorMessage
                            </div>
                        }
                        
                        <form method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="NewUser.FullName" class="form-label fw-semibold text-dark"></label>
                                        <input asp-for="NewUser.FullName" class="form-control form-control-lg" placeholder="Enter full name" />
                                        <span asp-validation-for="NewUser.FullName" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="NewUser.Email" class="form-label fw-semibold text-dark"></label>
                                        <input asp-for="NewUser.Email" class="form-control form-control-lg" placeholder="Enter email address" />
                                        <span asp-validation-for="NewUser.Email" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="NewUser.Password" class="form-label fw-semibold text-dark">Password</label>
                                        <input asp-for="NewUser.Password" class="form-control form-control-lg" type="password" placeholder="Enter password" />
                                        <span asp-validation-for="NewUser.Password" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="NewUser.ConfirmPassword" class="form-label fw-semibold text-dark">Confirm Password</label>
                                        <input asp-for="NewUser.ConfirmPassword" class="form-control form-control-lg" type="password" placeholder="Confirm password" />
                                        <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="NewUser.Role" class="form-label fw-semibold text-dark"></label>
                                <select asp-for="NewUser.Role" class="form-select form-select-lg">
                                    <option value="">Select a role</option>
                                    <option value="User">User</option>
                                    <option value="Expert">Expert</option>
                                    <option value="Staff">Staff</option>
                                </select>
                                <span asp-validation-for="NewUser.Role" class="text-danger small"></span>
                            </div>

                            <div class="form-group form-check" style="display:none">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="NewUser.IsActive" /> @Html.DisplayNameFor(model => model.NewUser.IsActive)
                                </label>
                            </div>

                            <div class="d-flex justify-content-between align-items-center pt-4 border-top">
                                <a asp-page="Index" class="btn btn-outline-primary btn-lg">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>Create User
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            border-radius: 20px;
            padding: 60px 30px;
            margin-bottom: 50px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
        }
        
        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #ffd700, #ffed4e);
        }
        
        .feature-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            overflow: hidden;
        }
        
        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            border: none;
            border-radius: 12px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(30, 60, 114, 0.3);
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(30, 60, 114, 0.4);
        }
        
        .btn-outline-primary {
            border: 2px solid #1e3c72;
            border-radius: 12px;
            padding: 12px 30px;
            font-weight: 600;
            color: #1e3c72;
            transition: all 0.3s ease;
        }
        
        .btn-outline-primary:hover {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            border-color: transparent;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(30, 60, 114, 0.4);
        }
        
        .section-title {
            color: #1e3c72;
            font-weight: 600;
            position: relative;
            display: inline-block;
            margin-bottom: 30px;
        }
        
        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, #ffd700, #ffed4e);
        }
        
        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 0.2rem rgba(30, 60, 114, 0.25);
            border-color: #1e3c72;
        }
    </style>
}
