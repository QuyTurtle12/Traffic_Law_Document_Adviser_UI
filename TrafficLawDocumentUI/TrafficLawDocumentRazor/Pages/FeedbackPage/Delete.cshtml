@page
@model TrafficLawDocumentRazor.Pages.FeedbackPage.DeleteModel

@{
    ViewData["Title"] = "Delete Feedback";
}

<style>
    .delete-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }
    
    .delete-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .delete-alert {
        background-color: rgba(220, 53, 69, 0.1);
        border-left: 4px solid #dc3545;
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 30px;
        color: #dc3545;
    }
    
    .delete-card {
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        padding: 0;
        border: 1px solid rgba(30, 60, 114, 0.1);
        position: relative;
        overflow: hidden;
        margin-bottom: 30px;
    }
    
    .delete-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #dc3545, #fd7e14);
    }
    
    .delete-card-header {
        background-color: rgba(220, 53, 69, 0.05);
        padding: 20px 30px;
        border-bottom: 1px solid rgba(220, 53, 69, 0.1);
    }
    
    .delete-card-body {
        padding: 30px;
    }
    
    .details-label {
        color: #1e3c72;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
    }
    
    .details-value {
        margin-bottom: 20px;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 10px;
        border-left: 4px solid rgba(30, 60, 114, 0.5);
    }
    
    .btn-action {
        display: inline-flex;
        align-items: center;
        padding: 10px 20px;
        border-radius: 12px;
        font-weight: 500;
        margin: 0 8px;
        transition: all 0.3s ease;
    }
    
    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
    }
    
    .btn-delete:hover {
        background-color: #c82333;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        transform: translateY(-2px);
    }
    
    .btn-back {
        background-color: rgba(30, 60, 114, 0.1);
        color: #1e3c72;
        border: none;
        text-decoration: none;
    }
    
    .btn-back:hover {
        background-color: rgba(30, 60, 114, 0.2);
        color: #1e3c72;
        transform: translateY(-2px);
    }
    
    .created-at {
        display: inline-flex;
        align-items: center;
        padding: 8px 15px;
        background-color: rgba(30, 60, 114, 0.05);
        border-radius: 20px;
        font-size: 0.9rem;
        color: #1e3c72;
        margin-top: 10px;
    }
    
    @@keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
        100% {
            transform: scale(1);
        }
    }
    
    .btn-delete {
        animation: pulse 2s infinite;
    }
    
    .btn-delete:hover {
        animation: none;
    }
</style>

<div class="container mt-4">
    <div class="delete-header text-center">
        <i class="bi bi-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
        <h1 class="display-5 mb-2">Delete Feedback</h1>
        <p class="lead mb-0">Are you sure you want to delete this feedback?</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="delete-alert">
                <i class="bi bi-exclamation-circle me-2"></i>
                <strong>Warning:</strong> This action cannot be undone. The feedback will be permanently deleted.
            </div>
            
            <div class="delete-card">
                <div class="delete-card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Feedback Information
                    </h4>
                    <div class="created-at">
                        <i class="bi bi-calendar-event me-2"></i> Created: @Model.Feedback.CreatedAtFormatted
                    </div>
                </div>
                
                <div class="delete-card-body">
                    <div class="mb-4">
                        <div class="details-label mb-2">AI Response</div>
                        <div class="details-value">
                            @Html.DisplayFor(model => model.Feedback.AIAnswer)
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <div class="details-label mb-2">Feedback Content</div>
                        <div class="details-value">
                            @Html.DisplayFor(model => model.Feedback.Content)
                        </div>
                    </div>
                    
                    <form method="post" class="text-center mt-4">
                        <input type="hidden" asp-for="Feedback.Id" />
                        <div class="d-flex justify-content-center">
                            <a asp-page="./Index" class="btn-action btn-back">
                                <i class="bi bi-arrow-left me-2"></i> Cancel
                            </a>
                            <button type="submit" class="btn-action btn-delete">
                                <i class="bi bi-trash me-2"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
