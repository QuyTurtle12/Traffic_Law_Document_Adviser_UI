@page
@model TrafficLawDocumentRazor.Pages.LawDocumentPage.IndexModel
@{
}

@{
	ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 mb-4">Law Document List</h1>
            <p class="lead">Stay updated with the latest traffic law documents and updates.</p>
        </div>
    </div>

    @if (Model.LawDocumentList.Items != null && Model.LawDocumentList.Items.Any())
    {
        <div class="row">
            @foreach (var lawDocument in Model.LawDocumentList.Items)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@lawDocument.Title</h5>
                            <a href="/LawDocumentPage/Details?id=@lawDocument.Id" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.LawDocumentList.TotalPages >= 1)
        {
            <nav aria-label="News pagination">
                <ul class="pagination justify-content-center">
                    @if (Model.LawDocumentList.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.LawDocumentList.PageNumber - 1)" asp-route-pageSize="@Model.LawDocumentList.PageSize">
                                <i class="bi bi-chevron-left"></i> Previous
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.LawDocumentList.PageNumber - 2); i <= Math.Min(Model.LawDocumentList.TotalPages, Model.LawDocumentList.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.LawDocumentList.PageNumber ? "active" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-pageIndex="@i" asp-route-pageSize="@Model.LawDocumentList.PageSize">@i</a>
                        </li>
                    }

                    @if (Model.LawDocumentList.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.LawDocumentList.PageNumber + 1)" asp-route-pageSize="@Model.LawDocumentList.PageSize">
                                Next <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }

        <!-- Page Size Selector -->
        <div class="text-center mt-3">
            <small class="text-muted">
                Showing @((Model.LawDocumentList.PageNumber - 1) * Model.LawDocumentList.PageSize + 1) to
                @Math.Min(Model.LawDocumentList.PageNumber * Model.LawDocumentList.PageSize, Model.LawDocumentList.TotalCount)
                of @Model.LawDocumentList.TotalCount results
            </small>
            <div class="mt-2">
                <span class="text-muted">Items per page:</span>
                <div class="btn-group btn-group-sm" role="group">
                    <a asp-page="./Index" asp-route-pageIndex="1" asp-route-pageSize="5" class="btn btn-outline-secondary @(Model.LawDocumentList.PageSize == 5 ? "active" : "")">5</a>
                    <a asp-page="./Index" asp-route-pageIndex="1" asp-route-pageSize="10" class="btn btn-outline-secondary @(Model.LawDocumentList.PageSize == 10 ? "active" : "")">10</a>
                    <a asp-page="./Index" asp-route-pageIndex="1" asp-route-pageSize="20" class="btn btn-outline-secondary @(Model.LawDocumentList.PageSize == 20 ? "active" : "")">20</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <h4>No law documents available</h4>
                    <p>Check back later for the latest updates.</p>
                </div>
            </div>
        </div>
    }
</div> 
