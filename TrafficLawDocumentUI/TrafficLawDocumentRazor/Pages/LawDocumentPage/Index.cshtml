@page
@model TrafficLawDocumentRazor.Pages.LawDocumentPage.IndexModel
@{
}

@{
    ViewData["Title"] = "Law Documents";
}

<style>
    .lawdoc-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border-radius: 20px;
        padding: 40px 30px 30px 30px;
        margin-bottom: 30px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }
    .lawdoc-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #fff, #fff);
    }
    .lawdoc-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.07);
        transition: transform 0.2s, box-shadow 0.2s;
        background: #fff;
        position: relative;
    }
    .lawdoc-card:hover {
        transform: translateY(-6px) scale(1.03);
        box-shadow: 0 16px 40px rgba(30, 60, 114, 0.15);
        border: 1.5px solid #fff;
    }
    .lawdoc-card .card-title {
        color: #1e3c72;
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 18px;
    }
    .lawdoc-card .btn-lawdoc {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 10px 24px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.2s;
        box-shadow: 0 2px 8px rgba(30, 60, 114, 0.08);
    }
    .lawdoc-card .btn-lawdoc:hover {
        background: linear-gradient(135deg, #2a5298 0%, #1e3c72 100%);
        color: #fff;
        transform: translateY(-2px) scale(1.04);
    }
    .lawdoc-empty {
        background-color: rgba(30, 60, 114, 0.05);
        border-radius: 20px;
        padding: 60px 30px;
        text-align: center;
        margin-bottom: 30px;
    }
    .lawdoc-empty i {
        font-size: 3rem;
        color: #1e3c72;
        margin-bottom: 20px;
    }
    .pagination {
        --bs-pagination-active-bg: #fff;
        --bs-pagination-active-border-color: #fff;
        --bs-pagination-color: #1e3c72;
        --bs-pagination-hover-color: #2a5298;
        --bs-pagination-focus-color: #2a5298;
        font-weight: 600;
    }
    .pagination .page-link {
        border-radius: 8px !important;
        margin: 0 2px;
        color: #1e3c72;
        border: 1px solid #e9ecef;
        transition: all 0.2s;
    }
    .pagination .page-link:hover {
        background: #ffd70022;
        color: #2a5298;
        border-color: #fff;
    }
    .pagination .active .page-link {
        background: #fff;
        color: #1e3c72;
        border-color: #1e3c72;
    }
    .lawdoc-pagesize {
        margin-top: 10px;
    }
    .lawdoc-pagesize .btn-group .btn {
        border-radius: 8px;
        font-weight: 600;
        color: #1e3c72;
        border: 1px solid #e9ecef;
        background: #f8f9fa;
        transition: all 0.2s;
    }
    .lawdoc-pagesize .btn.active, .lawdoc-pagesize .btn:hover {
        background: #fff;
        color: #1e3c72;
        border-color: #fff;
    }
</style>

<div class="container mt-4">
    <div class="lawdoc-header text-center">
        <i class="bi bi-journal-text text-warning" style="font-size: 3rem;"></i>
        <h1 class="display-4 mb-2">Law Document List</h1>
        <p class="lead mb-0">Stay updated with the latest traffic law documents and updates.</p>
    </div>


    <!-- Search Law Document -->

