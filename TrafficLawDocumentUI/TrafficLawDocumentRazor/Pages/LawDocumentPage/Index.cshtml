            <input type="text" name="TitleSearch" value="@Model.TitleSearch"
                   class="form-control rounded-start-pill px-4"
                   placeholder="🔍 Search law documents..." />
            <button class="btn btn-primary rounded-end-pill px-4" type="submit">
                Search
            </button>
        </div>
    </form> *@

    <!-- Basic Search -->
    <form method="get" class="mb-3">
        <div class="input-group shadow-sm" style="max-width: 600px; margin: auto;">
            <input type="text" name="TitleSearch" value="@Model.TitleSearch"
                   class="form-control rounded-start-pill px-4"
                   placeholder="🔍 Search by title..." />
            <button class="btn btn-primary rounded-end-pill px-4" type="submit">
                Search
            </button>
            <a href="/LawDocumentPage/Index" class="btn btn-outline-secondary">Clear</a>
        </div>

        <div class="text-center mt-2">
            <a class="btn btn-link" data-bs-toggle="collapse" href="#advancedSearch" role="button" aria-expanded="false" aria-controls="advancedSearch">
                Advanced Search ▼
            </a>
        </div>

        <!-- Advanced Search Panel -->
        <div class="collapse mt-3" id="advancedSearch">
            <div class="card shadow-sm" style="max-width: 700px; margin: auto;">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="documentCodeSearch" class="form-label">Document Code</label>
                            <input type="text" class="form-control" id="documentCodeSearch"
                                   name="DocumentCodeSearch" value="@Model.DocumentCodeSearch"
                                   placeholder="e.g. ND-135" />
                        </div>
                        <div class="col-md-6">
                            <label for="categoryNameSearch" class="form-label">Category</label>
                            <input type="text" class="form-control" id="categoryNameSearch"
                                   name="CategoryNameSearch" value="@Model.CategoryNameSearch"
                                   placeholder="e.g. Traffic" />
                        </div>
                    </div>
                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-outline-primary">Apply Filters</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- End Search Law Document -->


    @if (Model.LawDocumentList.Items != null && Model.LawDocumentList.Items.Any())
    {
        <div class="row">
            @foreach (var lawDocument in Model.LawDocumentList.Items)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="lawdoc-card h-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title mb-3"><i class="bi bi-file-earmark-text me-2 text-warning"></i>@lawDocument.Title</h5>
                            <a href="/LawDocumentPage/Details?id=@lawDocument.Id" class="btn btn-lawdoc mt-auto">
                                <i class="bi bi-arrow-right-circle me-1"></i> Read More
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.LawDocumentList.TotalPages >= 1)
        {
            <nav aria-label="Law document pagination">
                <ul class="pagination justify-content-center">
                    @if (Model.LawDocumentList.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.LawDocumentList.PageNumber - 1)" asp-route-pageSize="@Model.LawDocumentList.PageSize">
                                <i class="bi bi-chevron-left"></i> Previous
                            </a>
                        </li>
                    }
                    @for (int i = Math.Max(1, Model.LawDocumentList.PageNumber - 2); i <= Math.Min(Model.LawDocumentList.TotalPages, Model.LawDocumentList.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.LawDocumentList.PageNumber ? "active" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-pageIndex="@i" asp-route-pageSize="@Model.LawDocumentList.PageSize">@i</a>
                        </li>
                    }
                    @if (Model.LawDocumentList.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.LawDocumentList.PageNumber + 1)" asp-route-pageSize="@Model.LawDocumentList.PageSize">
                                Next <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
        <div class="text-center lawdoc-pagesize">
            <small class="text-muted">
                Showing @((Model.LawDocumentList.PageNumber - 1) * Model.LawDocumentList.PageSize + 1) to
                @Math.Min(Model.LawDocumentList.PageNumber * Model.LawDocumentList.PageSize, Model.LawDocumentList.TotalCount)
                of @Model.LawDocumentList.TotalCount results
            </small>
            <div class="btn-group btn-group-sm mt-2" role="group">
                <a asp-page="./Index" asp-route-pageIndex="1" asp-route-pageSize="5" class="btn btn-outline-secondary @(Model.LawDocumentList.PageSize == 5 ? "active" : "")">5</a>
                <a asp-page="./Index" asp-route-pageIndex="1" asp-route-pageSize="10" class="btn btn-outline-secondary @(Model.LawDocumentList.PageSize == 10 ? "active" : "")">10</a>
                <a asp-page="./Index" asp-route-pageIndex="1" asp-route-pageSize="20" class="btn btn-outline-secondary @(Model.LawDocumentList.PageSize == 20 ? "active" : "")">20</a>
            </div>
        </div>
    }
    else
    {
        <div class="lawdoc-empty">
            <i class="bi bi-journal-x"></i>
            <h4>No law documents available</h4>
            <p>Check back later for the latest updates.</p>
        </div>
    }
</div> 
