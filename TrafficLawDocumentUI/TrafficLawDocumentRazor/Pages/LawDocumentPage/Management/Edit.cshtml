@page "{id:guid}"
@model TrafficLawDocumentRazor.Pages.LawDocumentPage.Management.EditModel
@{
    ViewData["Title"] = "Edit Document";
    var isExpert = User.IsInRole("Expert");
}

<!-- Include Bootstrap Icons directly -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .page-container {
        min-height: 100vh;
        padding: 20px;
    }
    
    .content-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: none;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        animation: slideInUp 0.6s ease-out;
        margin-bottom: 20px;
    }
    
    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .page-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border: none;
        padding: 30px 20px;
        text-align: center;
        position: relative;
    }
    
    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .page-header h1 {
        margin: 0;
        font-weight: 600;
        font-size: 2.2rem;
    }
    
    .page-header p {
        margin: 10px 0 0 0;
        opacity: 0.9;
        font-size: 1.1rem;
    }
    
    .law-icon {
        font-size: 3rem;
        margin-bottom: 15px;
        color: #ffd700;
    }
    
    .form-section {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 20px;
        border: 1px solid #e9ecef;
        transition: all 0.3s ease;
    }
    
    .form-section:hover {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transform: translateY(-2px);
    }
    
    .form-section h5 {
        color: #1e3c72;
        font-weight: 600;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }
    
    .form-control, .form-select {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: white;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #1e3c72;
        box-shadow: 0 0 0 0.2rem rgba(30, 60, 114, 0.25);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border: none;
        border-radius: 12px;
        padding: 15px 30px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(30, 60, 114, 0.3);
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(30, 60, 114, 0.4);
    }
    
    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        border-radius: 12px;
        padding: 15px 30px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }
    
    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
    }
    
    .btn-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
        border: none;
        border-radius: 12px;
        padding: 15px 30px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
    }
    
    .btn-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(108, 117, 125, 0.4);
    }
    
    .btn-outline-dark {
        border: 2px solid #1e3c72;
        border-radius: 8px;
        color: #1e3c72;
        transition: all 0.3s ease;
        font-weight: 500;
        padding: 8px 16px;
    }
    
    .btn-outline-dark:hover, .btn-check:checked + .btn-outline-dark {
        background: #1e3c72;
        border-color: #1e3c72;
        color: white;
        transform: translateY(-1px);
    }
    
    .text-danger {
        font-size: 0.875rem;
        margin-top: 5px;
        color: #dc3545;
    }
    
    .required-field::after {
        content: " *";
        color: #dc3545;
    }
    
    .expert-verification {
        background: linear-gradient(135deg, #ffc107 0%, #ffca2c 100%);
        color: #212529;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
        text-align: center;
    }
    
    .expert-verification h5 {
        color: #212529;
        margin-bottom: 15px;
    }
    
    .expert-verification .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
    }
</style>

<div class="page-container">
    <div class="content-card">
        <div class="page-header">
            <div class="law-icon">
                <i class="bi bi-pencil-square"></i>
            </div>
            <h1>@(isExpert ? "Verify Document" : "Edit Document")</h1>
            <p>@(isExpert ? "Review and verify law document" : "Update law document details")</p>
        </div>
        
        <div class="card-body" style="padding: 30px;">
            @if (isExpert)
            {
                <div class="expert-verification">
                    <h5>
                        <i class="bi bi-shield-check me-2"></i>
                        Expert Verification Required
                    </h5>
                    <p class="mb-3">You are reviewing this document as an expert. Please verify the content and accuracy.</p>
                    <form method="post" asp-page-handler="Verify" asp-route-id="@RouteData.Values["id"]">
                        <input type="hidden" name="id" value="@RouteData.Values["id"]" />
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-2"></i>Verify Document
                        </button>
                    </form>
                </div>
            }
            else
            {
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="LawDocument.LinkPath" />

                    <div class="row">
                        <!-- Document Information Section -->
                        <div class="col-lg-6">
                            <div class="form-section">
                                <h5>
                                    <i class="bi bi-file-earmark-text"></i>
                                    Document Information
                                </h5>
                                
                                <div class="mb-3">
                                    <label asp-for="LawDocument.Title" class="form-label required-field">
                                        <i class="bi bi-type me-1"></i>Title
                                    </label>
                                    <input asp-for="LawDocument.Title" class="form-control" placeholder="Enter document title..." />
                                    <span asp-validation-for="LawDocument.Title" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="LawDocument.DocumentCode" class="form-label required-field">
                                        <i class="bi bi-hash me-1"></i>Document Code
                                    </label>
                                    <input asp-for="LawDocument.DocumentCode" class="form-control" placeholder="Enter document code..." />
                                    <span asp-validation-for="LawDocument.DocumentCode" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="LawDocument.CategoryId" class="form-label required-field">
                                        <i class="bi bi-folder me-1"></i>Category
                                    </label>
                                    <select asp-for="LawDocument.CategoryId" class="form-select" asp-items="Model.Categories">
                                        <option value="">Select a category...</option>
                                    </select>
                                    <span asp-validation-for="LawDocument.CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Current File Information -->
                        <div class="col-lg-6">
                            <div class="form-section">
                                <h5>
                                    <i class="bi bi-file-earmark-pdf"></i>
                                    Current File
                                </h5>
                                
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>Current File:</strong> @Model.LawDocument.FilePath
                                </div>
                                
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    <strong>Note:</strong> File upload is not available during editing. Contact administrator for file changes.
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Tags Section -->
                    <div class="form-section">
                        <h5>
                            <i class="bi bi-tags"></i>
                            Document Tags
                        </h5>
                        <p class="text-muted mb-3">Select relevant tags to categorize your document</p>
                        
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var tag in Model.Tags)
                            {
                                var isChecked = Model.LawDocument.TagList != null
                                && Model.LawDocument.TagList.Any(t => t.DocumentTagId.ToString() == tag.Value);
                                <div class="form-check form-check-inline">
                                    <input class="btn-check"
                                           type="checkbox"
                                           name="SelectedTagIds"
                                           value="@tag.Value"
                                           id="tag-@tag.Value"
                                           @(isChecked ? "checked" : "") />
                                    <label class="btn btn-outline-dark" for="tag-@tag.Value">
                                        <i class="bi bi-tag me-1"></i>@tag.Text
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
