@page
@model TrafficLawDocumentRazor.Pages.LawDocumentPage.DeleteModel

@{
    ViewData["Title"] = "Delete Confirmation";
}

<style>
    .delete-container {
        min-height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .delete-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 3rem;
        align-self: flex-start;
    }

    .delete-question {
        font-size: 1.25rem;
        font-weight: 500;
        margin-bottom: 2rem;
        text-align: center;
    }

    .delete-btn-yes {
        width: 140px;
        background: #111;
        color: #fff;
        border: none;
        border-radius: 16px;
        margin-bottom: 0.5rem;
        padding: 0.5rem 0;
        font-weight: 500;
        transition: background 0.2s;
    }

        .delete-btn-yes:hover {
            background: #333;
        }

    .delete-btn-no {
        width: 140px;
        background: #999;
        color: #fff;
        border: none;
        border-radius: 16px;
        padding: 0.5rem 0;
        font-weight: 500;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

        .delete-btn-no:hover {
            background: #666;
            color: #fff;
            text-decoration: none;
        }
</style>

<div class="delete-container">
    <div class="delete-title">Delete Confirmation</div>
    <div class="delete-question">
        Do you want to delete this: <b>@Model.Title</b>?
    </div>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="delete-btn-yes">Yes</button>
    </form>
    <a asp-page="./Index" class="delete-btn-no">No</a>
</div>