@page
@model TrafficLawDocumentRazor.Pages.LawDocumentPage.DetailsModel

@{
    ViewData["Title"] = "Law Document Details";
}

<style>
    .lawdoc-details-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border-radius: 20px;
        padding: 40px 30px 30px 30px;
        margin-bottom: 30px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }
    .lawdoc-details-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #fff, #fff);
    }
    .lawdoc-tabs {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        justify-content: flex-start;
    }
    .lawdoc-tabs button {
        background: #fff;
        color: #1e3c72;
        border: 2px solid #1e3c72;
        border-radius: 10px 10px 0 0;
        padding: 10px 28px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.2s;
        outline: none;
        cursor: pointer;
        position: relative;
    }
    .lawdoc-tabs button.active, .lawdoc-tabs button:focus {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: #fff;
        border-bottom: 2px solid #fff;
        z-index: 2;
    }
    .lawdoc-tab-content {
        background: #fff;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 10px 30px rgba(30, 60, 114, 0.07);
        padding: 32px 24px;
        margin-bottom: 30px;
        min-height: 200px;
        border-top: none;
        position: relative;
        z-index: 1;
    }
    .summary-table {
        width: 100%;
        margin-top: 18px;
        background: #f8f9fa;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(30, 60, 114, 0.05);
    }
    .summary-table td {
        padding: 12px 18px;
        border-bottom: 1px solid #e9ecef;
        font-size: 1rem;
    }
    .summary-table tr:last-child td {
        border-bottom: none;
    }
    .status-known {
        color: #1e3c72;
        font-weight: 700;
    }
    .btn-download {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 10px 24px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.2s;
        box-shadow: 0 2px 8px rgba(30, 60, 114, 0.08);
        margin-right: 10px;
    }
    .btn-download:hover {
        background: linear-gradient(135deg, #2a5298 0%, #1e3c72 100%);
        color: #fff;
        transform: translateY(-2px) scale(1.04);
    }
    .sidebar {
        background: #f8f9fa;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(30, 60, 114, 0.05);
        padding: 24px 18px;
        margin-top: 30px;
    }
    .sidebar h4 {
        color: #1e3c72;
        font-weight: 700;
        margin-bottom: 18px;
    }
    .most-viewed-list {
        list-style: none;
        padding-left: 0;
        margin-bottom: 0;
    }
    .most-viewed-list li {
        padding: 8px 0;
        border-bottom: 1px solid #e9ecef;
        color: #2a5298;
        font-weight: 500;
    }
    .most-viewed-list li:last-child {
        border-bottom: none;
    }
    .breadcrumb {
        color: #2a5298;
        font-weight: 600;
        margin-bottom: 18px;
        font-size: 1.1rem;
    }
</style>

<div class="container mt-4">
    <div class="lawdoc-details-header text-center">
        <i class="bi bi-journal-text text-warning" style="font-size: 3rem;"></i>
        <h1 class="display-4 mb-2">@Model.LawDocument.Title</h1>
        <p class="lead mb-0">Law Document Details</p>
    </div>
    <div class="breadcrumb">
        Home / Law Documents / Details
    </div>
    <div class="row">
        <div class="col-lg-9">
            <div class="lawdoc-tabs">
                <button class="active" data-tab="summary">Summary</button>
                <button data-tab="content">Content</button>
                <button data-tab="download">Download</button>
            </div>
            <div class="lawdoc-tab-content" id="summary" style="display: block">
                <div class="legal-wrapper">
                    <div class="summary-section">
                        <h2 class="mb-3" style="color:#1e3c72;font-weight:700;">ATTRIBUTE</h2>
                        <p><strong>@Model.LawDocument.Title</strong></p>
                        <table class="summary-table">
                            <tr>
                                <td><strong>Document Code:</strong></td>
                                <td>@Model.LawDocument.DocumentCode</td>
                                <td><strong>Expert Verified:</strong></td>
                                <td class="status-known">@(Model.LawDocument.ExpertVerification ? "Yes" : "No")</td>
                            </tr>
                            <tr>
                                <td><strong>Category:</strong></td>
                                <td>@Model.LawDocument.Category?.Name</td>
                                <td><strong>Created:</strong></td>
                                <td>@Model.LawDocument.CreatedTime?.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <td><strong>Created By:</strong></td>
                                <td>@Model.LawDocument.CreatedBy</td>
                                <td><strong>Last Updated:</strong></td>
                                <td>@Model.LawDocument.LastUpdatedTime?.ToString("dd/MM/yyyy")</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="lawdoc-tab-content" id="content" style="display: none">
                <div class="legal-wrapper">
                    <embed src="@Model.LawDocument.FilePath" type="application/pdf" width="100%" height="800px" />
                </div>
            </div>
            <div class="lawdoc-tab-content" id="download" style="display: none">
                <div class="legal-wrapper">
                    <div class="download-buttons">
                        @functions {
                            public static string GenerateSafeFileName(string rawTitle)
                            {
                                string normalized = rawTitle.Normalize(System.Text.NormalizationForm.FormD);
                                var sb = new System.Text.StringBuilder();
                                foreach (var ch in normalized)
                                {
                                    var uc = System.Globalization.CharUnicodeInfo.GetUnicodeCategory(ch);
                                    if (uc != System.Globalization.UnicodeCategory.NonSpacingMark)
                                    {
                                        sb.Append(ch);
                                    }
                                }
                                string noAccents = sb.ToString().Normalize(System.Text.NormalizationForm.FormC);
                                noAccents = noAccents.Replace("\u0111", "d").Replace("\u0110", "D");
                                string cleaned = System.Text.RegularExpressions.Regex.Replace(noAccents, @"[^a-zA-Z0-9\-_.]+", "_");
                                return cleaned.Trim('_');
                            }
                        }
                        @{
                            var safeFileName = GenerateSafeFileName(Model.LawDocument.Title) + ".pdf";
                        }
                        <button class="btn-download pdf" onclick="downloadFile('@Model.LawDocument.FilePath', '@safeFileName')">
                            <i class="fas fa-file-pdf"></i> Download as PDF
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <aside class="sidebar">
                <h4>MOST VIEWED</h4>
                <div class="box most-viewed">
                    <ul class="most-viewed-list">
                        <li>Placeholder document 1</li>
                        <li>Placeholder document 2</li>
                    </ul>
                </div>
            </aside>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const tabs = document.querySelectorAll(".lawdoc-tabs button");
        const contents = document.querySelectorAll(".lawdoc-tab-content");
        tabs.forEach((tab) => {
            tab.addEventListener("click", function () {
                tabs.forEach((t) => t.classList.remove("active"));
                this.classList.add("active");
                contents.forEach((c) => (c.style.display = "none"));
                const selectedTab = this.getAttribute("data-tab");
                document.getElementById(selectedTab).style.display = "block";
            });
        });
    });
    function downloadFile(fileUrl, fileName) {
        fetch(fileUrl)
            .then(response => {
                if (!response.ok) {
                    throw new Error("Network response was not ok.");
                }
                return response.blob();
            })
            .then(blob => {
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.style.display = 'none';
                a.href = url;
                a.download = fileName;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
            })
            .catch(error => {
                alert('Failed to download file: ' + error);
            });
    }
</script>
