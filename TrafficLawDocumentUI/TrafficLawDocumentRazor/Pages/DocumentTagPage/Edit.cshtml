@page
@model TrafficLawDocumentRazor.Pages.DocumentTagPage.EditModel

@{
    ViewData["Title"] = "Document Tag Management (Edit)";
}

<div class="mb-4">
    <h1 class="h2">Edit Document Tag</h1>
    <p>Edit document tag details.</p>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
        <strong>Error!</strong> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" style="border:2px dashed #c3b6fc; border-radius:12px; padding:2rem;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-4">
                <label asp-for="Name" class="form-label">
                    Name <span class="text-danger">*</span>
                </label>
                <input asp-for="Name" class="form-control" placeholder="Enter tag name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ParentTagId" class="form-label">Parent Tag</label>
                <select asp-for="ParentTagId" class="form-select" asp-items="Model.ParentTags">
                    <option value="">Select parent tag (optional)</option>
                </select>
                <span asp-validation-for="ParentTagId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a asp-page="Index" class="btn btn-link px-0">Back to List</a>
                <button type="submit" class="btn btn-dark px-4">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}