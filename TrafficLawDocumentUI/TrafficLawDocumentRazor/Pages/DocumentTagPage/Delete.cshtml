@page
@model TrafficLawDocumentRazor.Pages.DocumentTagPage.DeleteModel

@{
    ViewData["Title"] = "Delete Document Tag";
}

<style>
    .delete-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 40px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
        text-align: center;
    }
    
    .delete-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .delete-container {
        min-height: 50vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    
    .delete-card {
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        padding: 40px;
        border: 1px solid rgba(30, 60, 114, 0.1);
        width: 100%;
        max-width: 500px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .delete-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #dc3545, #ef5350);
    }
    
    .delete-icon {
        font-size: 3rem;
        color: #dc3545;
        margin-bottom: 20px;
        animation: pulse 1.5s infinite;
    }
    
    @@keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
        }
    }
    
    .delete-question {
        font-size: 1.25rem;
        font-weight: 500;
        margin-bottom: 30px;
        color: #2c3e50;
    }
    
    .delete-tag-name {
        font-weight: 700;
        color: #1e3c72;
        font-size: 1.5rem;
        margin-top: 10px;
        margin-bottom: 20px;
        padding: 10px 20px;
        background-color: rgba(30, 60, 114, 0.05);
        border-radius: 10px;
        display: inline-block;
    }
    
    .btn-action-group {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }
    
    .btn-delete {
        background: linear-gradient(135deg, #dc3545 0%, #ef5350 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        width: 140px;
    }
    
    .btn-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
        color: white;
    }
    
    .btn-cancel {
        background: #f8f9fa;
        color: #1e3c72;
        border: 2px solid rgba(30, 60, 114, 0.1);
        border-radius: 12px;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
        width: 140px;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }
    
    .btn-cancel:hover {
        background-color: rgba(30, 60, 114, 0.05);
        color: #1e3c72;
        text-decoration: none;
        transform: translateY(-2px);
    }
</style>

<div class="container mt-4">
    <div class="delete-header">
        <i class="bi bi-shield-exclamation text-warning" style="font-size: 3rem;"></i>
        <h1 class="display-5 mb-2">Delete Document Tag</h1>
        <p class="lead mb-0">Please confirm deletion of this document tag</p>
    </div>
    
    <div class="delete-container">
        <div class="delete-card">
            <i class="bi bi-trash delete-icon"></i>
            <div class="delete-question">
                Are you sure you want to delete this tag?
            </div>
            <div class="delete-tag-name">
                "@Model.Name"
            </div>
            <div class="btn-action-group">
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn-delete">
                        <i class="bi bi-check-lg me-2"></i> Yes
                    </button>
                </form>
                <a asp-page="./Index" class="btn-cancel">
                    <i class="bi bi-x-lg me-2"></i> No
                </a>
            </div>
        </div>
    </div>
</div>