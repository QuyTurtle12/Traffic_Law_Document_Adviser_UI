@page
@model TrafficLawDocumentRazor.Pages.DocumentTagPage.IndexModel

@{
    ViewData["Title"] = "Document Tags";
}

<style>
    .pagination {
        justify-content: center;
    }

    .page-item.active .page-link {
        background-color: #111 !important;
        border-color: #111 !important;
        color: #fff !important;
    }

    .search-area {
        background-color: #f0f0f0;
        padding: 0.5rem;
        border-radius: 8px;
    }

    .table thead {
        background-color: #111;
        color: white;
    }

        .table thead th {
            border-bottom: none;
        }
</style>

<div class="col">
    <h1>Document Tags</h1>
	<p>Manage all document tags here.</p>
</div>

<div class="row g-2 align-items-center mb-3 search-area">
    <div class="col">
        <!-- Search Bar -->
        <form method="get" class="mb-3">
            <div class="row g-2 align-items-center">
                <div class="col-auto">
                    <input type="text" name="name" value="@Request.Query["name"]" class="form-control" placeholder="Tag name search" />
                </div>
                <div class="col-auto">
                    <input type="text" name="parentName" value="@Request.Query["parentName"]" class="form-control" placeholder="Parent tag name search" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-dark px-4">Search</button>
                </div>
            </div>
        </form>
    </div>
	<!-- Add New Tag Button -->
    <div class="col-auto">
        <a asp-page="Create" class="btn btn-dark px-4">Add Tag</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Parent Tag</th>
            <th>Child Tags</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DocumentTag.Items)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ParentTagName)</td>
                <td>
                @Html.Raw(item.ChildTagNames != null
                                    ? string.Join("<br/> ", item.ChildTagNames)
                                    : "")
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.DocumentTag.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-page="./Index"
                   asp-route-pageNumber="@(Model.DocumentTag.PageNumber - 1)"
                   asp-route-pageSize="@Model.DocumentTag.PageSize"
                   asp-route-nameSearch="@Request.Query["nameSearch"]">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Previous</span>
            </li>
        }

        @for (int i = 1; i <= Model.DocumentTag.TotalPages; i++)
        {
            if (i == Model.DocumentTag.PageNumber)
            {
                <li class="page-item active">
                    <span class="page-link">@i</span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-page="./Index"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@Model.DocumentTag.PageSize"
                       asp-route-nameSearch="@Request.Query["nameSearch"]">@i</a>
                </li>
            }
        }

        @if (Model.DocumentTag.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-page="./Index"
                   asp-route-pageNumber="@(Model.DocumentTag.PageNumber + 1)"
                   asp-route-pageSize="@Model.DocumentTag.PageSize"
                   asp-route-nameSearch="@Request.Query["nameSearch"]">Next</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Next</span>
            </li>
        }
    </ul>
</nav>