@page
@model TrafficLawDocumentRazor.ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .profile-container {
        min-height: 100vh;
        padding: 40px 20px;
    }

    .profile-card {
        background: rgba(255, 255, 255, 0.97);
        backdrop-filter: blur(10px);
        border: none;
        border-radius: 20px;
        box-shadow: 0 16px 36px rgba(0, 0, 0, 0.1);
        max-width: 420px;
        margin: 0 auto;
        margin-top: 60px;
        animation: fadeIn 0.6s;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border: none;
        padding: 30px 20px 20px 20px;
        text-align: center;
        border-radius: 20px 20px 0 0;
        position: relative;
    }

        .card-header .bi-person-circle {
            font-size: 3rem;
            color: #ffd700;
            margin-bottom: 10px;
        }

    .profile-info {
        padding: 30px 30px 18px 30px;
        text-align: center;
    }

    .profile-field {
        margin-bottom: 20px;
        text-align: left;
    }

    .profile-label {
        font-weight: 600;
        color: #2a5298;
        margin-bottom: 5px;
        display: block;
    }

    .profile-value {
        font-size: 1.05rem;
        color: #212529;
        background: #f8f9fa;
        border-radius: 8px;
        padding: 10px 15px;
    }

    .roles-list {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        margin-top: 12px;
    }

    .role-badge {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 8px 18px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.95rem;
        box-shadow: 0 2px 8px rgba(40, 167, 69, 0.12);
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

    .back-button {
        display: inline-block;
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
        border: none;
        border-radius: 12px;
        padding: 10px 24px;
        font-weight: 600;
        color: white;
        text-decoration: none;
        transition: all 0.3s;
        margin-top: 20px;
    }

        .back-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(108, 117, 125, 0.16);
            color: white;
            text-decoration: none;
        }
</style>

<div class="profile-container">
    <div class="profile-card">
        <div class="card-header">
            <i class="bi bi-person-circle"></i>
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="profile-info">
            <div class="profile-field">
                <span class="profile-label"><i class="bi bi-person-lines-fill me-1"></i>Full Name</span>
                <div class="profile-value">@Model.FullName</div>
            </div>
            <div class="profile-field">
                <span class="profile-label"><i class="bi bi-envelope-at me-1"></i>Email</span>
                <div class="profile-value">@Model.Email</div>
            </div>
            <div class="profile-field">
                <span class="profile-label"><i class="bi bi-award me-1"></i>Role(s)</span>
                <div class="roles-list">
                    @if (Model.Roles.Any())
                    {
                        @foreach (var role in Model.Roles)
                        {
                            <span class="role-badge"><i class="bi bi-star-fill"></i>@role</span>
                        }
                    }
                    else
                    {
                        <span class="role-badge" style="background: #bdbdbd;">No Role</span>
                    }
                </div>
            </div>
            <div class="text-center">
                <a href="/" class="back-button">
                    <i class="bi bi-arrow-left me-2"></i>
                    Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
