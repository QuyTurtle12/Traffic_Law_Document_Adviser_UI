@page "{id:guid}"
@model TrafficLawDocumentRazor.Pages.News.EmbeddedModel
@{
    ViewData["Title"] = Model.News?.Title ?? "Embedded News";
}

<div class="container-fluid p-0">
    @if (Model.News == null)
    {
        <div class="alert alert-danger m-4">
            <h4>Article not found</h4>
            <p>The requested news article could not be found.</p>
            <a asp-page="Index" class="btn btn-primary">Back to News</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <!-- Header with navigation -->
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">@Model.News.Title</a>
                        <div class="navbar-nav ms-auto">
                            <a asp-page="Details" asp-route-id="@Model.News.Id" class="btn btn-outline-light me-2">
                                <i class="bi bi-arrow-left"></i> Back to Details
                            </a>
                            <a asp-page="Index" class="btn btn-outline-light">
                                <i class="bi bi-house"></i> News Home
                            </a>
                        </div>
                    </div>
                </nav>

                <!-- Embedded content -->
                @if (!string.IsNullOrEmpty(Model.News.EmbeddedUrl))
                {
                    <div class="embed-responsive embed-responsive-16by9" style="height: calc(100vh - 60px);">
                        <iframe 
                            src="@Model.News.EmbeddedUrl" 
                            title="@Model.News.Title"
                            class="embed-responsive-item w-100 h-100 border-0"
                            allowfullscreen>
                        </iframe>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning m-4">
                        <h4>No embedded content available</h4>
                        <p>This news article doesn't have embedded content.</p>
                        <a asp-page="Details" asp-route-id="@Model.News.Id" class="btn btn-primary">View Article Details</a>
                    </div>
                }
            </div>
        </div>
    }
</div> 