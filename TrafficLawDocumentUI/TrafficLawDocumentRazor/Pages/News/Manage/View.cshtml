@page "{id:guid}"
@model TrafficLawDocumentRazor.Pages.News.Manage.ViewModel
@{
    ViewData["Title"] = Model.News?.Title ?? "View News";
}

<style>
    .view-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border-radius: 20px;
        padding: 40px 30px;
        margin-bottom: 30px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }
    
    .view-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .breadcrumb {
        border-radius: 12px;
        padding: 12px 20px;
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: #ffd700;
        font-weight: 600;
        margin-bottom: 18px;
        position: relative;
        overflow: hidden;
    }
    
    .breadcrumb::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .breadcrumb-item + .breadcrumb-item::before {
        color: #ffd700;
    }
    
    .breadcrumb-item a {
        color: #ffd700;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .breadcrumb-item a:hover {
        color: white;
        text-decoration: underline;
    }
    
    .breadcrumb-item.active {
        color: white;
        font-weight: 600;
    }
    
    .article-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        background: white;
        position: relative;
    }
    
    .article-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .article-card .card-title {
        color: #1e3c72;
        font-weight: 700;
        font-size: 2.5rem;
        line-height: 1.2;
    }
    
    .article-card .card-body {
        padding: 30px;
    }
    
    .article-header {
        border-bottom: 2px solid #ffd70022;
        padding-bottom: 20px;
        margin-bottom: 30px;
    }
    
    .article-content {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #2c3e50;
    }
    
    .embedded-content {
        border-radius: 15px;
        overflow: hidden;
        border: none;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
        margin-bottom: 20px;
        background: white;
        position: relative;
    }
    
    .embedded-content::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .embedded-content h5 {
        color: #1e3c72;
        font-weight: 600;
        padding: 20px 20px 0 20px;
    }
    
    .embedded-content .ratio {
        padding: 0 20px 20px 20px;
    }
    
    .admin-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        position: relative;
        overflow: hidden;
    }
    
    .admin-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .admin-card .card-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: #ffd700;
        border: none;
        border-radius: 20px 20px 0 0;
        padding: 15px 20px;
        font-weight: 600;
    }
    
    .admin-card .card-body {
        padding: 20px;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: #ffd700;
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(30, 60, 114, 0.3);
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(30, 60, 114, 0.4);
        color: #ffd700;
    }
    
    .btn-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
    }
    
    .btn-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(108, 117, 125, 0.4);
        color: white;
    }
    
    .btn-warning {
        background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
        border: none;
        color: #1e3c72;
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3);
    }
    
    .btn-warning:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 215, 0, 0.4);
        color: #1e3c72;
    }
    
    .btn-danger {
        background: linear-gradient(135deg, #dc3545 0%, #ef5350 100%);
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
    }
    
    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
    }
    
    .error-message {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .error-message::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .error-message i {
        font-size: 3rem;
        color: #ffd700;
        margin-bottom: 20px;
    }
    
    .news-meta {
        color: #6c757d;
        font-size: 0.95rem;
    }
    
    .news-meta i {
        color: #ffd700;
        margin-right: 6px;
    }
    
    .btn-group .btn {
        margin: 0 4px;
    }
    
    .alert-info {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border: none;
        border-radius: 15px;
        position: relative;
        overflow: hidden;
    }
    
    .alert-info::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .alert-info a {
        color: #ffd700;
        text-decoration: underline;
    }
    
    .alert-info a:hover {
        color: white;
    }
    
    dt {
        color: #1e3c72;
        font-weight: 600;
    }
    
    dd {
        color: #2c3e50;
    }
    
    code {
        background: #f8f9fa;
        color: #1e3c72;
        padding: 4px 8px;
        border-radius: 6px;
        font-weight: 600;
    }
</style>

<div class="container mt-4">
    @if (Model.News == null)
    {
        <div class="error-message">
            <i class="bi bi-exclamation-triangle"></i>
            <h4>Article not found</h4>
            <p>The requested news article could not be found.</p>
            <a asp-page="Index" class="btn btn-light mt-2">Back to Management</a>
        </div>
    }
    else
    {
        <div class="view-header">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    <i class="bi bi-eye text-warning" style="font-size: 3rem;"></i>
                    <h1 class="display-4 mb-2">View Article</h1>
                    <p class="lead mb-0">Review the news article details and content.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-10 mx-auto">
                <!-- Header with navigation -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="/Index"><i class="bi bi-house me-1"></i>Home</a></li>
                                <li class="breadcrumb-item"><a asp-page="Index"><i class="bi bi-newspaper me-1"></i>News Management</a></li>
                                <li class="breadcrumb-item active" aria-current="page">View Article</li>
                            </ol>
                        </nav>
                        <h1 class="h2">View News Article</h1>
                    </div>
                    <div class="btn-group" role="group">
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to Management
                        </a>
                        <a asp-page="Edit" asp-route-id="@Model.News?.Id" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>
                        <a asp-page="Delete" asp-route-id="@Model.News?.Id" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i> Delete
                        </a>
                    </div>
                </div>

                <!-- Article Content -->
                <div class="article-card">
                    @if (!string.IsNullOrEmpty(Model.News?.ImageUrl))
                    {
                        <img src="@Model.News.ImageUrl" class="card-img-top" alt="@(Model.News?.Title ?? "News Image")" style="max-height: 300px; object-fit: cover;">
                    }
                    
                    <div class="card-body">
                        <header class="article-header">
                            <h2 class="card-title">@(Model.News?.Title ?? "Untitled")</h2>
                            <div class="news-meta">
                                <i class="bi bi-calendar me-1"></i> Published: @(Model.News?.PublishedDate.ToString("MMMM dd, yyyy 'at' HH:mm") ?? "N/A")
                                @if (!string.IsNullOrEmpty(Model.News?.Author))
                                {
                                    <span> | <i class="bi bi-person me-1"></i> Author: @Model.News.Author</span>
                                }
                            </div>
                        </header>

                        <!-- Article Content -->
                        <div class="article-content mb-4">
                            @Html.Raw(Model.News?.Content?.Replace("\n", "<br>") ?? "No content available")
                        </div>

                        <!-- Embedded Content Preview -->
                        @if (!string.IsNullOrEmpty(Model.News?.EmbeddedUrl))
                        {
                            <div class="embedded-content">
                                <h5><i class="bi bi-link-45deg me-1"></i>Embedded Content</h5>
                                <div class="alert alert-info mx-3">
                                    <i class="bi bi-link-45deg me-1"></i> 
                                    <strong>Embedded URL:</strong> 
                                    <a href="@Model.News.EmbeddedUrl" target="_blank" class="text-break">@Model.News.EmbeddedUrl</a>
                                </div>
                                <div class="ratio ratio-16x9">
                                    <iframe src="@Model.News.EmbeddedUrl" title="Embedded content preview" allowfullscreen></iframe>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Administrative Information -->
                <div class="admin-card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Administrative Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Article ID:</dt>
                                    <dd class="col-sm-8"><code>@(Model.News?.Id.ToString() ?? "N/A")</code></dd>
                                    
                                    <dt class="col-sm-4">Created By:</dt>
                                    <dd class="col-sm-8">@(Model.News?.Author ?? "N/A")</dd>
                                    
                                    <dt class="col-sm-4">Created Time:</dt>
                                    <dd class="col-sm-8">@(Model.News?.CreatedTime?.ToString("MMMM dd, yyyy 'at' HH:mm") ?? "N/A")</dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Last Updated:</dt>
                                    <dd class="col-sm-8">@(Model.News?.LastUpdatedTime?.ToString("MMMM dd, yyyy 'at' HH:mm") ?? "N/A")</dd>
                                    
                                    <dt class="col-sm-4">User ID:</dt>
                                    <dd class="col-sm-8">@(Model.News?.UserId?.ToString() ?? "N/A")</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4 d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to Management
                    </a>
                    
                    <div class="btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@Model.News?.Id" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i> Edit Article
                        </a>
                        <a asp-page="Delete" asp-route-id="@Model.News?.Id" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i> Delete Article
                        </a>
                        @if (!string.IsNullOrEmpty(Model.News?.EmbeddedUrl))
                        {
                            <a href="@Model.News.EmbeddedUrl" class="btn btn-primary" target="_blank">
                                <i class="bi bi-box-arrow-up-right me-1"></i> View Embedded
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}
</div> 