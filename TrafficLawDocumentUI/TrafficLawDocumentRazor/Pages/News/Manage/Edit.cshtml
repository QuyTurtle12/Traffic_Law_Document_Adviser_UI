@page "{id:guid}"
@model TrafficLawDocumentRazor.Pages.News.Manage.EditModel
@{
    ViewData["Title"] = "Edit News Article";
}

<style>
    .edit-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border-radius: 20px;
        padding: 40px 30px;
        margin-bottom: 30px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }
    
    .edit-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .form-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }
    
    .form-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .form-card .card-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: #ffd700;
        border: none;
        border-radius: 20px 20px 0 0;
        padding: 20px 30px;
        font-weight: 600;
    }
    
    .form-card .card-body {
        padding: 30px;
    }
    
    .form-label {
        color: #1e3c72;
        font-weight: 600;
        margin-bottom: 8px;
    }
    
    .form-control, .form-select {
        border-radius: 12px;
        border: 2px solid #dee2e6;
        padding: 12px 16px;
        transition: all 0.3s ease;
        font-size: 1rem;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #ffd700;
        box-shadow: 0 0 0 0.2rem rgba(255, 215, 0, 0.25);
        outline: none;
    }
    
    .form-text {
        color: #6c757d;
        font-size: 0.875rem;
        margin-top: 6px;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: #ffd700;
        border: none;
        border-radius: 12px;
        padding: 12px 24px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(30, 60, 114, 0.3);
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(30, 60, 114, 0.4);
        color: #ffd700;
    }
    
    .btn-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 12px 24px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
    }
    
    .btn-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(108, 117, 125, 0.4);
        color: white;
    }
    
    .text-danger {
        color: #dc3545 !important;
        font-weight: 500;
        font-size: 0.875rem;
        margin-top: 4px;
    }
    
    .form-group {
        margin-bottom: 24px;
    }
    
    .required-field::after {
        content: ' *';
        color: #dc3545;
        font-weight: bold;
    }
    
    .error-message {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .error-message::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }
    
    .error-message i {
        font-size: 3rem;
        color: #ffd700;
        margin-bottom: 20px;
    }
</style>

<div class="container mt-4">
    @if (Model.News == null)
    {
        <div class="error-message">
            <i class="bi bi-exclamation-triangle"></i>
            <h4>Article not found</h4>
            <p>The requested news article could not be found.</p>
            <a asp-page="Index" class="btn btn-light mt-2">Back to List</a>
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger border-0 shadow-sm mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@Model.ErrorMessage
            </div>
        }
        <div class="edit-header">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    <i class="bi bi-pencil-square text-warning" style="font-size: 3rem;"></i>
                    <h1 class="display-4 mb-2">Edit Article</h1>
                    <p class="lead mb-0">Update the news article information.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="form-card">
                    <div class="card-header">
                        <h3 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Article Details</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="News.Id" />
                            
                            <div class="form-group">
                                <label asp-for="News.Title" class="form-label required-field">Title</label>
                                <input asp-for="News.Title" class="form-control" placeholder="Enter article title" />
                                <span asp-validation-for="News.Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="News.Content" class="form-label required-field">Content</label>
                                <textarea asp-for="News.Content" class="form-control" rows="8" placeholder="Enter article content"></textarea>
                                <span asp-validation-for="News.Content" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="News.Author" class="form-label">Author</label>
                                        <input asp-for="News.Author" class="form-control" placeholder="Enter author name" />
                                        <span asp-validation-for="News.Author" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="News.PublishedDate" class="form-label">Published Date</label>
                                        <input asp-for="News.PublishedDate" class="form-control" type="date" />
                                        <span asp-validation-for="News.PublishedDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="News.ImageUrl" class="form-label">Image URL</label>
                                <input asp-for="News.ImageUrl" class="form-control" placeholder="Enter image URL" />
                                <span asp-validation-for="News.ImageUrl" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>Provide a URL to an image for the article
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="News.EmbeddedUrl" class="form-label">Embedded URL</label>
                                <input asp-for="News.EmbeddedUrl" class="form-control" placeholder="Enter embedded content URL" />
                                <span asp-validation-for="News.EmbeddedUrl" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>Optional: URL for embedded content (video, document, etc.)
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a asp-page="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left me-1"></i> Back to List
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i> Update Article
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 